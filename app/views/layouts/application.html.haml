%html
  %head
    %title= [yield(:title), t(:app_name)].compact.join(" | ")
    %meta{"content" => "text/html;charset=UTF-8", "http-equiv" => "content-type"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    %link{:rel => "shortcut icon", :href => "/favicon.ico"}
    = stylesheet_link_tag 'application', :media => 'screen, projection'
    = javascript_include_tag 'application'
    = csrf_meta_tag
    = yield :head
  %body
    .navbar.navbar-fixed-top
      .fill.navbar-inner
        .container-fluid
          = link_to 'OpenCurriculum Flashcards', root_path, :class => 'brand'
          = render "shared/menu"

    .container-fluid
      = show_flash
      .row-fluid
        - if (content_column_right = yield :content_column_right).empty?
          .span12= yield
        - else
          .span12= yield
          .span4= yield :content_column_right
    .clear
    %footer.footer
      .container-fluid
        %p &copy; Isotope11 2012
    = render "shared/javascripts"
