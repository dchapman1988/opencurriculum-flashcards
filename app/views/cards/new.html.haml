%ul.breadcrumb
  %li
    = link_to(t('decks.index.title'), decks_path)
    %span.divider /
  %li
    = link_to(@card.deck, deck_path(@card.deck))
    %span.divider /
  %li= title t('.title')

= semantic_form_for @card, as: :card, url: cards_path, html: {class: 'form-horizontal'} do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :name, hint: t('.name_hint')
    = f.input :front_content, hint: t('.front_content_hint').html_safe, input_html: { class: 'input-xlarge', rows: 5 }
    = f.input :back_content, hint: t('.back_content_hint'), input_html: { class: 'input-xlarge', rows: 5 }
    = f.hidden_field :deck_id
  = f.actions do
    = f.action :submit, button_html: { class: 'primary' }
