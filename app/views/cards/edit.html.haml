%ul.breadcrumb
  %li
    = link_to(t('decks.index.title'), decks_path)
    %span.divider /
  %li
    = link_to(@card.deck, deck_path(@card.deck))
    %span.divider /
  %li
    = link_to(@card, card_path(@card))
    %span.divider /
  %li= title t('.title')

= semantic_form_for @card, as: :card, url: card_path(@card), html: {class: 'form-horizontal'} do |f|
  = render 'form', f: f
